pipeline {
    agent any
    stages {
        stage('Clean workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Git Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/adrianotorinipogrammers/weatherjenkins.git'
            }
        }
        stage('Restore packages') {
            steps {
                bat "dotnet restore ${workspace}\\weatherjenkins\\weatherjenkins.sln"
            }
        }
        stage('Clean') {
            steps {
                bat "msbuild.exe ${workspace}\\weatherjenkins\\weatherjenkins.sln /nologo /nr:false /p:platform=\"x64\" /p:configuration=\"release\" /t:clean"
            }
        }
    }
}
