pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clona o repositório
                git 'https://github.com/adrianotorinipogrammers/weatherjenkins.git'
            }
        }
       stage('Restore') {
            steps {
                // Comando para restaurar os pacotes
                sh 'dotnet restore'
            }
        }
        stage('Build') {
            steps {
                // Comando para construir o projeto
                sh 'dotnet build --configuration Release'
            }
        }
    }

    post {
        always {
            // Ações que sempre serão executadas
            echo 'Pipeline concluído.'
        }
        success {
            // Notificação de sucesso
            echo 'Pipeline concluído com sucesso!'
        }
        failure {
            // Notificação de falha
            echo 'Pipeline falhou.'
        }
    }
}
